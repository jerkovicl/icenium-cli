{
	"$schema": "http://json-schema.org/draft-03/schema#",
	"id": "Base",
	"type": "object",
	"additionalProperties": true,
	"properties": {
		"ProjectName": {
			"type": "string",
			"required": true,
			"description": "The project name identifies this project to the cloud build."
		},
		"ProjectGuid": {
			"type": "string",
			"required": true,
			"description": "Unique identifier of the project.",
			"pattern": "(\\{)?[0-9A-Fa-f]{8}-[0-9A-Fa-f]{4}-4[0-9A-Fa-f]{3}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{12}(\\})?",
			"errorMessage": "Must be a GUID string enclosed in curly braces."
		},
		"projectVersion": {
			"type": [ "integer", "string" ],
			"required": true
		},
		"AppIdentifier": {
			"type": "string",
			"required": true,
			"description": "The application identifier (or app id) must match the app id property of the iOS mobile provision used for building.",
			"pattern": "^[a-zA-Z]+([a-zA-Z0-9]*)(\\.[a-zA-Z]+([a-zA-Z0-9]*)){2,}$"
		},
		"DisplayName": {
			"type": "string",
			"description": "The display name of the app."
		},
		"Author": {
			"type": "string",
			"description": "Application author name. If left empty, then the user account name is used."
		},
		"Description": {
			"type": "string",
			"description": "Application description."
		},
		"BundleVersion": {
			"type": "string",
			"required": true,
			"description": "The application (or bundle) version.",
			"pattern": "^(\\d+)(\\.\\d+)?(\\.\\d+)?(\\.\\d+)?$",
			"errorMessage": "The version must consist of two, three or four numbers separated with dots."
		},
		"Framework": {
			"type": "string",
			"required": true
		},
		"FrameworkVersion": {
			"type": "string"
		},
		"ProjectTypeGuids": {
			"type": "string",
			"required": true,
			"description": "Must be a GUID string enclosed in curly braces.",
			"pattern": "(\\{)?[0-9A-Fa-f]{8}-[0-9A-Fa-f]{4}-4[0-9A-Fa-f]{3}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{12}(\\})?"
		},
		"IsRunnable": {
			"type": "string"
		},
		"DeviceOrientations": {
			"type": "array",
			"description": "List of supported device orientations",
			"uniqueItems": true,
			"items": {
				"type": "string",
				"enum": [ "Portrait", "Landscape" ]
			}
		}
	}
}
